.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-toggle" => ".nav-collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .nav-collapse
        %ul.nav.pull-right
          - if current_user
            - if current_user.display_name != nil
              - user_name = current_user.display_name
            - else
              - user_name = current_user.full_name
            %li
              %p
                Welcome #{user_name}!
            %li= link_to "My Account", user_path(current_user)
            %li= link_to "Logout", logout_path
          - else
            %li= link_to "Log In", login_path
            %li= link_to "Sign Up", signup_path
