#signup
  .row-fluid
    .span6.offset3
      %h2.text-center Create an Account
      = link_to "Already registered? Log in here", login_path, :class => 'text-center'
      
      = render 'form'

      - if current_user.nil?
        - session[:return_to] = root_path
      - elsif request.referrer == "http://localhost:3000/users/new"
        - session[:return_to] = edit_user_path(current_user)
      - else
        - session[:return_to] = request.referrer
