<div id="login" >
<div class='row-fluid'>
  <div class='span6 offset3'>
    <h2 class='text-center'>Log In</h2>
      <%= link_to "Not registered? Sign up here", signup_path %>
      <%= simple_form_for :session, :url => sessions_path, :html => {:class => 'bs-container'} do |f| %>
        <%= f.error_notification %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.button :submit, :value => "Log In", :class => "btn-primary"%>
        <%= f.error :base %>

      <% end %> 
    </div>
  </div>
</div>
