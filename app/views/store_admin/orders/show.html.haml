- provide(:title, 'Admin Order Detail')
.row-fluid
  .span12.tab_above
    .page-header.order_detail
      %h1
        Order Number:
        \#{@order.id}
      .details
        %p.date
          Order Placed on
          %span.date
            = (@order.created_at).to_date.strftime("%B %-d, %Y")
          at
          %span
            = (@order.created_at).to_time.strftime("%I:%M %P")
            , GMT
          = link_to "view all past orders", store_admin_orders_path
      .details
