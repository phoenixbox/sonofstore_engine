%h3 How would you like to Checkout?
#login
  .span6.offset3
    %h4 Sign-Up
    = link_to "Not registered? Sign up here", new_user_path
    %h4 Login
    = simple_form_for :sessions, :url => new_order_path(), :html => {:class => 'bs-container'} do |f|
      = f.error_notification
      = f.input :email
      = f.input :password
      = f.button :submit, :value => "Log In", :class => "btn-primary"
      = f.error :base
#login
  .span6.offset3
    = button_to "Checkout as Guest", new_order_path, method: :get, :class => "btn-primary pull-right"
