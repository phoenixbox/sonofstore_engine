.row-fluid
  .span12
    #myCarousel.carousel.slide
      .carousel-inner
        .item.active
          = image_tag("http://store-engine.s3.amazonaws.com/assets/Carousel1.jpg")
        .item
          = image_tag("http://store-engine.s3.amazonaws.com/assets/Carousel2b.jpg")
        .item
          = image_tag("http://store-engine.s3.amazonaws.com/assets/Carousel3a.jpg")
      %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel"} &lsaquo;
      %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel"} &rsaquo;
.row-fluid
  .span12
    .page-header
      %h1
        Featured Products
.row-fluid
  - @featured.each do |product|
    - if product.active
      %li.span3
        .thumbnail
          = link_to product_path(product) do
            = image_tag product.photo_url
          .caption
            %h5
              = product.title
            %p= number_to_currency(product.price_in_dollars)
