%p#notice= notice
.row-fluid
  %ul.breadcrumb
    %li
      %span.divider
        / 
    %li.active
    %li
      = link_to 'All Products', products_path
    \/
    %li
      = @category.name
.row-fluid
  .span12
    .page-header
      %h1
        = @category.name.capitalize
  .row-fluid
    .thumbnails.product_list
      - @category.products.each do |product|
        - if product.active
          %li.span3
            .thumbnail
              = link_to product_path(product) do
                = image_tag product.photo_url
              .caption
                %p= link_to product.title, product_path(product)
                %p= number_to_currency(product.price_in_dollars)
