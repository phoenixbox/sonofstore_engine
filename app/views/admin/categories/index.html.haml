- provide(:title, 'Admin Category List')
.row-fluid
  .span12
    .span6
      %h3 Categories
    .span6.header-button
      = button_to "Add Category Product", new_admin_category_path, method: :get, :class => "btn pull-right"
.row-fluid
  .span12
    %table.table.table-striped.table-bordered.cart-detail
      %thead
        %tr
          %th.span7 Name
          %th.span5 Action
      %tbody
        - @categories.each do |category|
          %tr
            %td= category.name
            %td
              = link_to "Edit", edit_admin_category_path(category)
              |
              = link_to "Delete", admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }
