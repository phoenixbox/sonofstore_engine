<h1><%= current_tenant.name %> Store</h1>
<div class='row-fluid'>
  <div class='span12'></div>
  <div class='carousel slide' id='myCarousel'>
    <div class='carousel-inner'>
      <div class='item active'>
        <%= image_tag("http://store-engine.s3.amazonaws.com/assets/Carousel1.jpg") %>
      </div>
      <div class='item'>
        <%= image_tag("http://store-engine.s3.amazonaws.com/assets/Carousel2b.jpg") %>
      </div>
      <div class='item'>
        <%= image_tag("http://store-engine.s3.amazonaws.com/assets/Carousel3a.jpg") %>

      </div>
    </div>
    <a class='left carousel-control' data-slide='prev' href='#myCarousel'>&lsaquo;</a>
    <a class='right carousel-control' data-slide='next' href='#myCarousel'>&rsaquo;</a>
  </div>
</div>
<div class='row-fluid'>
  <div class='span12'>
    <div class='page-header'>
      <h1>
        Featured Products
      </h1>
    </div>
  </div>
</div>
<div class='row-fluid'>
  <% @featured.each do |product| %>
  <% if product.active %>
    <li class='span3'>
      <div class='thumbnail'>
        <%= link_to product_path(product) do %>
          <%= image_tag product.photo.url %>
        <% end %>
        <div class='caption'>
          <h5> <%= product.title %></h5>
          <p><%= number_to_currency(product.price_in_dollars) %></p>
        </div>
      </div>
    </li>
    <% end %>
    <% end %>
</div>

</div>

